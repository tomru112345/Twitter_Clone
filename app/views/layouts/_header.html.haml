.navbar.navbar-default
  .container
    .navbar-header
      = link_to root_url, class: "navbar-brand" do
        %i.fas.fa-kiwi-bird
    - if logged_in?
      %ul.nav.navbar-nav
        %li= link_to "全ツイート一覧", tweets_path
        %li= link_to "ランキング", users_path
        
      %ul.nav.navbar-nav.navbar-right

        - if current_user.screen_name.present?
          %li= link_to current_user.screen_name, current_user
        - else
          %li= link_to current_user.name, current_user
        
        %li= link_to "通知", notifications_path
        %li= link_to "設定", edit_settings_path
        /%li = link_to edit_settings_path, i: 'fas fa-user-cog'
        %li= link_to "ログアウト", sessions_path, method: :delete
    - else
      %ul.nav.navbar-nav.navbar-right
        %li= link_to "会員登録", new_registrations_path
        %li= link_to "ログイン", new_sessions_path